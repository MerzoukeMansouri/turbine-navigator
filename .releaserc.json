{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node -e \"const fs = require('fs'); const manifest = JSON.parse(fs.readFileSync('./public/manifest.json', 'utf8')); manifest.version = '${nextRelease.version}'; fs.writeFileSync('./public/manifest.json', JSON.stringify(manifest, null, 2) + '\\n');\""
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "cd dist && zip -r ../turbine-navigator-${nextRelease.version}.zip ."
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "turbine-navigator-*.zip",
            "label": "Turbine Navigator Extension (Chrome)"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md", "public/manifest.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
